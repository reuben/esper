{
  "manifest_version": 2,
  "name": "Esper",
  "version": "0.1",
  "applications": {
    "gecko": {
      "id": "me@reub.in"
    }
  },
  "browser_action": {
    "default_icon": {
      "32": "img/icon-32x32.png"
    },
    "default_popup": "popup.html",
    "default_title": "Esper"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*",
        "file:///*"
      ],
      "js": ["content.js"],
      "run_at": "document_start",
      "match_about_blank": true
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "*://*/*",
    "file:///*",
    "activeTab",
    "bookmarks",
    "clipboardRead",
    "clipboardWrite",
    "cookies",
    "downloads",
    "downloads.open",
    "find",
    "history",
    "sessions",
    "tabs"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
